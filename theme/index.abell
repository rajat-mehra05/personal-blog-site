{{
  const { globalMeta, contentArray, $root } = Abell;
  
  const DarkModeToggle = require('./components/DarkModeToggle.abell');
  const InlinedCSS = require('./static-assets/styles/InlinedCSS.abell');
  const Footer = require('./components/Footer.abell');
}}
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta name="description" content="Welcome to the {{ globalMeta.siteName }}, A blog by {{ globalMeta.name }}" />
  <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+KR&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="{{ $root }}/static-assets/styles/index.css">
  <title>{{ globalMeta.siteName }}</title>
  <InlinedCSS/>
</head>
<body>
  <header>
    <DarkModeToggle props={$root} />
    <h1>Aayush Pal</h1>
    <div class="header-bio">
      Hey there! welcome to my corner of the internet. <br/>You can find me as  <b>' {{ globalMeta.name }} '</b> on most places. ðŸ¤—<a href="https://twitter.com/{{ globalMeta.twitter }}">  Twitter </a> | <a href="https://github.com/palcodes">GitHub</a> | <a href="https://www.instagram.com/palcodes/">Instagram</a> <br>
      A mere CS student with a not so mere love for computers.ðŸ’» I like to work with all kinds of tech, mostly mobile.<br />
      This website is a collection of thoughts, opinions I have on things that I see around the world, a journal of sorts. ðŸ“‘
    </div>
  </header>
  <main>
    <div class="article-container">
      {{
        contentArray
          .map(meta => /* html */ `
            <article class="shadow">
              <a href="${meta.$path}/">
